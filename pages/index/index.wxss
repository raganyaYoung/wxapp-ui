/**index.wxss**/
.container {
  height: 100%;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.headline {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
  flex-direction: column;
  color: #999;
  padding: 10px 0 40px;
}
.logo {
  width: 80px;
  height: 80px;
  margin-bottom: 10px;
}

.item-list:last-child:after {
  border-bottom: 1px solid #ddd;
  content: ' ';
  display: block;
  width: 100%;
  position: absolute;
  left: 0;
}