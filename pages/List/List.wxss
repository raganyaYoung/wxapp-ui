/* pages/List/List.wxss */
.list {
  color: #444;
  box-sizing: border-box;
  overflow: hidden;
}
.list .list-title {
  box-sizing: border-box;
  width: 100%;
  padding: 10px;
}
.list-items {
  background: #fff;
  box-sizing: border-box;
}
.list-item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding: 10px;
}
.list-item-active {
  background: #f5f5f5;
}
.item-left, .item-right {
  display:flex;
  align-items: center;
  width: 46%;
}
.item-left-icon {
  margin-right: 6px;
}
.item-title, .item-note {
  max-width: 80%;
  white-space: nowrap;
  overflow: auto;
}
.item-note {
  color: #aaa;
}
.item-right {
  justify-content:flex-end;
}
.icon {
  width: 14px;
  height: 14px;
}
.item-right-icon {
  margin-left: 6px;
}
.item-arrow-icon {
  margin-right:-4px;
}

.border-margin::after {
  left: 10px;
}