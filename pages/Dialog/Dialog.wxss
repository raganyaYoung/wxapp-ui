/* pages/Dialog/Dialog.wxss */
.popup {
  color: #484746;
  font-size: 14px;
  box-sizing: border-box;
  width: 240px;
  background: hsla(0,0%,100%,.9);
  border-radius: 4px;
  max-height: 80%;
  display: flex;
  flex-direction: column;
  animation-timing-function: ease-in-out;
  animation-duration: .3s;
  word-wrap: break-word;
  margin: 0 auto;
  z-index: 12;
  word-wrap:break-word;
  position:absolute;
  left:0;
  right:0;
}
.popup.ios {
  border-radius: 10px;
}
.popup-head {
  padding: 10px;
  font-size: 14px;
  text-align: center;
}
.popup-body {
  padding: 10px;
  overflow: auto;
  margin-bottom: 10px;
}
.popup-buttons {
  padding: 10px;
  display: flex;
}
.popup-buttons .alert-button::after {
  border: none;
}
.popup-buttons .alert-button {
  background: #4a90e2;
  color: #fff;
  border: none;
  width: 100%;
  border-radius: 2px;
}
.popup-buttons .confirm-lbutton {
  background: none;
  width: 46%;
}
.popup-buttons .confirm-lbutton::after {
  /*border-radius: 2px;*/
}
.popup-buttons .confirm-rbutton {
  width:46%;
  background:#ea5a49;
  color:#fff;
  /*border-radius: 2px;*/
}
.popup-buttons .confirm-rbutton::after {
  border: none;
}

/**
 * ios
 */
.ios-head {
  font-family: sans-serif;
  font-weight: 700;
  color: #000;
  padding: 0;
  margin-top: 14px;
}
.ios-body {
  text-align: center;
  font-weight: 400;
  color: #000;
  font-family: sans-serif;
  font-size: 12px;
  padding: 0;
  margin: 8px 0 16px 0;
}
.ios-buttons {
  display: flex;
  justify-content: space-around;
  color: #4a90e2;
  padding: 0;
}
.ios-btn {
  color: #4a90e2;
  margin: 0 auto;
}
.l-btn, .r-btn {
  color: #4a90e2;
  padding: 10px;
  width: 49%;
  text-align: center;
}
.l-btn::after {
  content:" ";
  width:100%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-right:1px solid rgba(13,13,13,0.1);
  -webkit-transform:scale(.5);
  -webkit-transform-origin:0 0;
  -webkit-box-sizing:border-box;
  z-index:0;
}