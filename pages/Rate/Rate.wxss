/* pages/Rate/Rate.wxss */
.checked-rate {
  color: #ffac00;
  text-align: center;
}
.checked-rate text {
  font-size: 38px;
}
.rate-desc {
  color: #ffac00;
  display:flex;
  justify-content:center;
  font-size:12px;
  margin-top: 6px;
}
.rate-star {
  display: flex;
  justify-content: center;
  align-items: center;
}
.rate-star-icon {
  width: 40px;
  height: 40px;
}
.comment {
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment textarea {
  box-sizing: border-box;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 2px;
  padding: 10px;
  height: 100px;
  font-size: 12px;
  width: 80%;
}
.submit {
  background: #ff6a00;
  margin-top:10px;
  width:80%;
  color:#fff;
  font-size:14px;
}