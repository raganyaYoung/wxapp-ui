<!--pages/audio/audio.wxml-->
<view class="f14 deep-gray-font" style="box-sizing: border-box;">
  <view class="component-title">
    <text>音频</text>
    <view class="cut-line"></view>
  </view>

  <view class="demo-view">
    <audio poster="{{poster}}" author="{{author}}" name="{{name}}" src="{{src}}" id="myAudio" controls></audio>

    <view class="btn-view">
      <button bindtap="audioPlay">播放</button>
      <button bindtap="audioPause">暂停</button>
      <button bindtap="audio14">设置当前播放时间为14秒</button>
      <button bindtap="audioStart">回到开头</button>
    </view>
  </view>
</view>
